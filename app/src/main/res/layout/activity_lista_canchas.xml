<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".admin.ListaCanchas">

    <Button
        android:id="@+id/btnGoCrearCanchas"
        android:layout_width="254dp"
        android:layout_height="56dp"
        android:layout_margin="10dp"
        android:backgroundTint="@color/colorWhite"
        android:fontFamily="sans-serif"
        android:onClick="crearCanchas"
        android:padding="10dp"
        android:text="@string/crear_canchas"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.997" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCanchas"
        android:layout_width="413dp"
        android:layout_height="653dp"
        app:layout_constraintBottom_toTopOf="@+id/btnGoCrearCanchas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>